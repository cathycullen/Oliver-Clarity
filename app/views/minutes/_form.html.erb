<div class="row-fluid col-md-6 clearfix">
  <div class="span4 well">

    <%= simple_form_for [@user, @minute]  do |f| %>

      <% if @minute.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@minute.errors.count, "error") %> prohibited this minute from being saved:</h2>
          <ul>
          <% @minute.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    <fieldset >
      <legend><%= operation %> Minutes</legend>
      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :company %>
      <%= f.input :date, as: :date, html5: true %>
      <%= f.input :kind, collection: ['Annual', 'Special'], selected: 0 %>
      <%= f.input :attendees %>
      <%= f.input :notice, collection: yes_no_arr, selected: 0 %>
      <%= f.input :vote, collection: Minute::VOTE_TYPES, selected: 0 %>
      <%= f.input :resolutions %>
      <%= f.input :additional %>
      <div class="actions">
        <%= f.button :submit %>
        <%= link_to 'Cancel', user_path(@user), class: "btn btn-lg btn-danger"%>
      </div>
    </fieldset >
    <% end %>
  </div>
</div>

</div>
