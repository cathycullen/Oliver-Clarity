


<div class="row text-center ">
  <h1><%= @user.name %></h1>
</div>
<div class="row">
  <!-- <div class="col-sm-3"></div> -->
  <div class="col-sm-3">
    <div class="panel panel-default  text-center price-headline">
      <div class="panel-heading">
        <div class="panel-title">
          <h4>Annual Budget</h4>
        </div>
      </div>
      <div class="panel-body text-center price-headline">
        <h4>$<%= ActiveSupport::NumberHelper::number_to_currency(@annual_budget,{precision: 0,unit: ''})%></h4>
      </div>
    </div><!-- panel default -->
  </div><!-- col-sm-3 -->

  <div class="col-sm-3">
    <div class="panel panel-default  text-center price-headline">
      <div class="panel-heading">
        <div class="panel-title">
          <h4>Spend This Month</h4>
        </div>
      </div>
      <div class="panel-body text-center price-headline">
        <h4>$<%= ActiveSupport::NumberHelper::number_to_currency(@spend_this_month,{precision: 0,unit: ''})%></h4>
      </div>
    </div><!-- panel default -->
  </div><!-- col-sm-3 -->


  <div class="col-sm-3">
    <div class="panel panel-default text-center price-headline">
      <div class="panel-heading">
        <div class="panel-title">
          <h4>Spend This Year</h4>
        </div>
      </div>
      <div class="panel-body text-center price-headline">
        <h4>$<%= ActiveSupport::NumberHelper::number_to_currency(@spend_this_year,{precision: 0,unit: ''})%></h4>
      </div>
    </div><!-- panel default -->
  </div><!-- col-sm-3 -->

  <div class="col-sm-3">
    <div class="panel panel-default  text-center">
      <div class="panel-heading">
        <div class="panel-title">
          <h4>Remaining</h4>
        </div>
      </div>
      <div class="panel-body text-center price-headline">
        <h4>$<%= ActiveSupport::NumberHelper::number_to_currency(@remaining,{precision: 0,unit: ''})%></h4>
      </div>
    </div><!-- panel default -->
  </div><!-- col-sm-3 -->
</div><!-- row -->

<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="panel-title">
          <i class="fa fa-legal pull-left" style="padding-right: 20px;"></i>
          <h4>Lawyers</h4>
        </div>
      </div>
      <div class="panel-body" style="padding:0;">
        <table class="table table-condensed table-bordered table-striped table-hover table-responsive" >
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
            </tr>
          </thead>
          <tbody>
            <% @user.attorneys.each do |attorney| %>
              <tr>
                <td><%= attorney.name %></td>
                <td><%= attorney.email %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div><!-- panel body -->
    </div><!-- panel default -->
  </div><!-- col -->
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="panel-title">
          <i class="fa fa-check pull-left" style="padding-right: 20px;"></i>
          <h4>Todo</h4>
        </div>
      </div>
      <div class="panel-body" style="padding:0;">
        <table class="table table-condensed table-bordered table-striped table-hover table-responsive" >
          <thead>
            <tr>
              <th>Task</th>
            </tr>
          </thead>
          <tbody>
            <% @todos.each do |task| %>
              <tr>
                <td><%= task.item %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div><!-- panel body -->
    </div><!-- panel default -->
  </div><!-- col-md-6-->
</div><!-- row -->
