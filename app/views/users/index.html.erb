
<div class="panel panel-default">
    <div class="panel-heading">
      <div class="panel-title">
        <h4>Users</h4>
      </div>
    </div>
<table class="table table-striped table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Gravatar</th>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
          <td><%= gravatar_for user, size: 10 %></td>
          <td><%= link_to user.name, user %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>
          <%= link_to user, class: "btn btn-default btn-sm" do %>
            <span class="glyphicon glyphicon-eye-open"></span>
          <% end %>
          <%= link_to edit_user_path(user), class: "btn btn-default btn-sm" do %>
            <span class="glyphicon  glyphicon-pencil"></span>
          <% end %>

          <%= button_to user, method: :delete, remote: true, class: "btn btn-sm btn-danger" do %>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
</div>

<%= link_to new_user_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-plus"></i> New User
<% end %>
