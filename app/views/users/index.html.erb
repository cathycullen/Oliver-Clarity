
<div class="panel panel-default table-data">
  <div class="panel-heading">
      <h3 class="panel-title">Users</h3>
  </div>
<table class="table table-striped table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
          <td><%= link_to user.name, user %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>
          <%= link_to user, method: :delete, remote: true, data:{confirm: "Delete this user?"}, class: "btn btn-sm btn-danger" do %>
          <span class="glyphicon glyphicon-trash"></span>
          <% end %>
          <%= link_to user, class: "btn btn-success btn-sm" do %>
            <span class="glyphicon glyphicon-eye-open"></span>
          <% end %>
          <%= link_to edit_user_path(user), class: "btn btn-info btn-sm" do %>
            <span class="glyphicon  glyphicon-pencil"></span>
          <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
</div>

<%= link_to new_user_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-plus"></i> New User
<% end %>

</div>
