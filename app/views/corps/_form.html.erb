<div class="row-fluid col-md-6 clearfix">
  <div class="span4 well">

    <%= simple_form_for [@user, @corp]  do |f| %>

      <% if @corp.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@corp.errors.count, "error") %> prohibited this expense from being saved:</h2>
          <ul>
          <% @corp.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    <fieldset >
      <legend><h3>Create a New Entity</h3></legend>
      <%= f.input :contact, :placeholder => "Contact Name" %>
      <%= f.input :email, :placeholder => "Contact Email" %>
      <%= f.input :entity, collection: Corp::ENTITY_TYPES, prompt: "Entity Type (corp, LLC, etc.)"  %>
      <%= f.input :owners, :placeholder => "Owners' Names and Interests" %>
      <%= f.input :office, :placeholder => "Principal Office Address" %>
      <%= f.input :state, prompt: "Preferred State of Incorporation", collection: us_states %>
      <%= f.input :company, :placeholder => "Company Name" %>
      <%= f.input :business, :placeholder => "Goods or Services Sold" %>
      <%= f.input :regagent, :placeholder => "Registered Agent's Name" %>
      <%= f.input :regoffice, :placeholder => "Registered Office Address" %>
      <%= f.input :incorporation, as: :date, html5: true %>
      <%= f.input :ein, :placeholder => "Federal EIN, if known" %>
      <%= f.input :next, as: :date, html5: true %>
      <div class="actions">
        <%= f.button :submit %>
        <%= link_to 'Cancel', user_path(@user), class: "btn btn-lg btn-danger"%>
      </div>
    </fieldset >
    <% end %>
  </div>
</div>
</div>
