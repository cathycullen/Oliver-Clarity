<div class="panel panel-default">
    <div class="panel-heading">
      <div class="panel-title">
        <h4>Attorneys</h4>
      </div>
    </div>
<table class="table table-striped table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Phone</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @attorneys.each do |attorney| %>
      <tr>
        <td><%= link_to attorney.name, attorney %></td>
        <td><%= attorney.address %></td>
        <td><%= attorney.email %></td>
        <td><%= attorney.phone %></td>
        <td>
          <%= link_to attorney, class: "btn btn-default btn-sm" do %>
            <span class="glyphicon glyphicon-eye-open"></span>
          <% end %>
          <%= link_to edit_attorney_path(attorney), class: "btn btn-default btn-sm" do %>
            <span class="glyphicon  glyphicon-pencil"></span>
          <% end %>
          <%= link_to 'Delete', attorney, method: :delete, data: { confirm: 'Are you sure?' },
              class: "btn btn-default  btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
</div>

<%= link_to new_attorney_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-plus"></i> New Attorney
<% end %>
