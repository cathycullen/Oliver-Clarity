<div class="row-fluid col-md-6 clearfix">
  <div class="span4 well">

    <%= simple_form_for [@user, @mark]  do |f| %>

      <% if @mark.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@mark.errors.count, "error") %> prohibited this expense from being saved:</h2>
          <ul>
          <% @mark.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    <fieldset >
      <legend><%= operation %> mark</legend>
      <%= f.input :contact %>
      <%= f.input :email %>
      <%= f.input :owner %>
      <%= f.input :entity %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.input :colors %>
      <%= f.input :anywhere %>
      <%= f.input :commerce %>
      <%= f.input :products %>
      <%= f.input :serial %>
      <%= f.input :registration, as: :date, html5: true %>
      <%= f.input :next, as: :date, html5: true %>
      <div class="actions">
        <%= f.button :submit %>
        <%= link_to 'Cancel', user_path(@user), class: "btn btn-lg btn-danger"%>
      </div>
    </fieldset >
    <% end %>
  </div>
</div>
</div>
